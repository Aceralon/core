bind: ":5001"
appdir: "/home"
permdir: "/mnt/mfs/permdirs"
backupdir: "/mnt/mfs/backupdirs"
etcd:
    - "http://127.0.0.1:2379"
etcd_lock_prefix: "/eru-core/_lock"

resource_alloc: "cpu-period"
statsd: "statsd2.ricebook.net:8125"

zone: "c1"

run_and_wait_timeout: 1200
image_cache: 2

git:
    public_key: "***REMOVED***"
    private_key: "***REMOVED***"
    gitlab_token: "***REMOVED***"

docker:
    log_driver: "json-file"
    network_mode: "bridge"
    cert_path: ""
    hub: "hub.ricebook.net"
    hub_prefix: ""
    build_pod: ""
    local_dns: true

scheduler:
    lock_key: "_scheduler_lock"
    lock_ttl: 10
    type: "complex"

syslog:
    address: "udp://localhost:5111"
    facility: "daemon"
    format: "rfc5424"
